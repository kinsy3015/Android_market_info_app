<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"

    android:onClick="onSearchLayoutItemClicked"
    android:clickable="true"
    >

        <TextView
            android:id="@+id/textView_itemName"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="이름 "
            />

    <TextView
        android:id="@+id/textVIew_price"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="가격, 할인 여부, 원쁠원 여부"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="할인"/>
        <CheckBox
            android:id="@+id/checkbox_searchClickDcYn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1+1"/>
        <CheckBox
            android:id="@+id/checkbox_searchClickPlusOneYn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_entpPosition"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="기업 위치만"
        android:tooltipText="기업 id"
        />



<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:backgroundTint="#3C3F41"-->
<!--            android:text="담기"/>-->
</LinearLayout>